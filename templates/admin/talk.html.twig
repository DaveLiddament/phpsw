{% extends 'admin/base.html.twig' %}


{% set menuItem = 'talks' %}
{% block body %}

    <h1>Talk: {{ talk.title }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Abstract</th>
            <td>{{ talk.abstract }}</td>
        </tr>
        <tr>
            <th>Event</th>
            <td>{{ talk.event.title }}</td>
        </tr>
        <tr>
            <th>Redirect URL</th>
            <td>{{ talk.originalRelativeUrl }}</td>
        </tr>
        <tr>
            <th>Slides</th>
            <td>{{ talk.slidesUrl }}</td>
        </tr>
        <tr>
            <th>JoindIn</th>
            <td>{{ talk.joindinUrl }}</td>
        </tr>

        <tr>
            <th>Video</th>
            <td>{{ talk.videoUrl }}</td>
        </tr>

        <tr>
            <th>Showcase</th>
            <td>{{ talk.showcase }}</td>
        </tr>

        <tr>
            <th>Speakers</th>
            <td>
                {% for speaker in talk.speakers %}
                    <a href="{{ url('personRead', {'person' : person.id}) }}"{{ speaker.name }}<br>
                {% endfor %}
            </td>
        </tr>

        </tbody>

    </table>

    <p>
        <a href="{{ url('talkUpdate', {'talk' : talk.id}) }}" class="btn btn-info" role="button">Edit</a>
        <a href="{{ url('talkDelete', {'talk' : talk.id}) }}" class="btn btn-danger" role="button">Delete</a>
    </p>

    Back to <a href="{{ url('eventRead', {'event' : talk.event.id}) }}">talk's event</a>.

{% endblock %}
