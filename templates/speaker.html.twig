{% extends "base.html.twig" %}

{% block title %}{{ speaker.name }} &middot; {{ parent() }}{% endblock %}

{% block content %}
    <div class="title">
        <h1 class="text-2xl mb-2">{{ speaker.name }}</h1>
        <p class="text-xl text-grey-light font-normal">{{ speaker.description }}</p>
    </div>

    <div class="md:flex">
        <div class="content mb-8 md:w-2/3 md:mb-0">
            {% include 'partials/speaker/links.html.twig' %}
            {% include "partials/speaker/talks.html.twig" %}
        </div>

        <div class="md:w-1/3">
            {% include "partials/interested-speaking.html.twig" %}
        </div>
    </div>
{% endblock %}
