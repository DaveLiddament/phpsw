<div class="mb-8 flex flex-row-reverse">
    <div class="flex-1">
        <h2 class="mb-1">
            <a href="{{ url('talk', {'slug' : talk.slug}) }}" class="link">
                {{ talk.title }}
            </a>
        </h2>

        <div class="mb-2">
            {% for speaker in talk.speakers %}
            <a href="{{ url('speaker', { 'slug': speaker.slug }) }}" class="text-sm link">
                {{ speaker.name }}
            </a>
            {% endfor %}
        </div>

        <div>
            <p class="text-sm text-grey-light leading-normal">
                {{ talk.abstract }}
            </p>
        </div>
    </div>

    <div class="flex-none mr-4 leading-none flex items-center">
        <img src="{{ talk.speakers[0].photoUrl }}" alt="{{ talk.speakers[0].name }}" class="w-12 h-12 rounded-full">
    </div>
</div>
