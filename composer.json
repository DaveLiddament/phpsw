{
  "name": "phpsw/website",
  "description" : "PHP-SW website",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^7.3.0",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "erusev/parsedown": "^1.7",
    "platformsh/symfonyflex-bridge": "^2.1",
    "sensio/framework-extra-bundle": "^5.1",
    "symfony/asset": "5.0.*",
    "symfony/console": "5.0.*",
    "symfony/dotenv": "5.0.*",
    "symfony/expression-language": "5.0.*",
    "symfony/flex": "^1.3.1",
    "symfony/form": "5.0.*",
    "symfony/framework-bundle": "5.0.*",
    "symfony/http-client": "5.0.*",
    "symfony/intl": "5.0.*",
    "symfony/mailer": "5.0.*",
    "symfony/monolog-bundle": "^3.1",
    "symfony/notifier": "5.0.*",
    "symfony/orm-pack": "*",
    "symfony/process": "5.0.*",
    "symfony/security-bundle": "5.0.*",
    "symfony/serializer-pack": "*",
    "symfony/string": "5.0.*",
    "symfony/translation": "5.0.*",
    "symfony/twig-pack": "*",
    "symfony/validator": "5.0.*",
    "symfony/web-link": "5.0.*",
    "symfony/yaml": "5.0.*",
    "twig/markdown-extra": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan": "^0.12.3",
    "phpstan/phpstan-doctrine": "^0.12.6",
    "phpstan/phpstan-symfony": "^0.12.1",
    "phpstan/phpstan-webmozart-assert": "^0.12.0",
    "rector/rector": "^0.6.4",
    "symfony/debug-pack": "*",
    "symfony/maker-bundle": "^1.0",
    "symfony/profiler-pack": "*",
    "symfony/test-pack": "*"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "ci": [
      "@composer-validate",
      "@php-lint",
      "@twig-lint",
      "@yaml-lint",
      "@container-lint",
      "@db-schema-check",
      "@cs",
      "@test",
      "@phpstan"
    ],
    "composer-validate" : "@composer validate --no-check-all --strict",
    "php-lint" : "parallel-lint src",
    "twig-lint" : "bin/console lint:twig templates",
    "yaml-lint" : "bin/console lint:yaml config",
    "container-lint" : "bin/console lint:container",
    "db-schema-check" : "bin/console doctrine:schema:validate",
    "cs" : "php-cs-fixer fix -v --dry-run --verbose",
    "cs-fix" : "php-cs-fixer fix -v",
    "test" : "bin/phpunit --log-junit reports/phpunit/junit.xml",
    "phpstan" : "phpstan analyse --no-progress "
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "5.0.*"
    }
  }
}
